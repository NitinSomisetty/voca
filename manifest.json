{
  "manifest_version": 3,
  "name": "Voca",
  "version": "0.2.0",
  "description": "Right-click a word to fetch its definition, save it, and practice later.",

  "permissions": [
    "contextMenus",
    "storage",
    "scripting"
  ],

"host_permissions": [
  "https://api.dictionaryapi.dev/*",
  "https://api.wordnik.com/*"
],


  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "resources/16x.png",
      "48": "resources/48x.png",
      "128": "resources/128x.png"
    }
  },

  "icons": {
    "16": "resources/16x.png",
    "48": "resources/48x.png",
    "128": "resources/128x.png"
  }
}
